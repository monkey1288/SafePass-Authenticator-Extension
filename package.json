{
  "name": "safepass-extension",
  "displayName": "SafePass Authenticator",
  "version": "0.0.1",
  "description": "SafePass Authenticator - 2FA Account Manager",
  "author": "roper",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "dev_firefox": "plasmo dev --target firefox",
    "build_firefox": "plasmo build --target firefox",
    "package_firefox": "plasmo package --target firefox"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1",
    "otplib": "12.0.1",
    "qrcode": "1.5.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/qrcode": "1.5.5",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "clipboardWrite"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*.png",
          "assets/icons/*.png"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
